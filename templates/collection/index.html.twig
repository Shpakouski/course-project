{% extends 'base.html.twig' %}

{% block title %}ItemCollection index{% endblock %}

{% block body %}
    <h1>ItemCollection index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>ImageUrl</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for item_collection in item_collections %}
            <tr>
                <td>{{ item_collection.id }}</td>
                <td>{{ item_collection.name }}</td>
                <td>{{ item_collection.description }}</td>
                <td>{{ item_collection.imageUrl }}</td>
                <td>
                    <a href="{{ path('app_collection_show', {'id': item_collection.id}) }}">show</a>
                    <a href="{{ path('app_collection_edit', {'id': item_collection.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_collection_new') }}">Create new</a>
{% endblock %}
