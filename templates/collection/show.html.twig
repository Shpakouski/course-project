{% extends 'base.html.twig' %}

{% block title %}ItemCollection{% endblock %}

{% block body %}
    <h1>ItemCollection</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ item_collection.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ item_collection.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ item_collection.description }}</td>
            </tr>
            <tr>
                <th>ImageUrl</th>
                <td>{{ item_collection.imageUrl }}</td>
            </tr>
            {% if item_collection.getCustomAttributes.getValues %}
                {% for attribute in item_collection.getCustomAttributes.getValues %}
                    <tr>
                        <th>Attribute#{{ attribute.id }}</th>
                        <td>{{ attribute.name }}</td>
                    </tr>
                {% endfor %}
            {% endif %}
        </tbody>
    </table>

    <a href="{{ path('app_collection_index') }}">back to list</a>

    <a href="{{ path('app_collection_edit', {'id': item_collection.id}) }}">edit</a>

    {{ include('collection/_delete_form.html.twig') }}
{% endblock %}
