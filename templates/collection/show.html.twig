{% extends 'base.html.twig' %}

{% block title %}Collection{% endblock %}

{% block body %}
    <h1>Collection</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ collection.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ collection.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ collection.description }}</td>
            </tr>
            <tr>
                <th>ImageUrl</th>
                <td>{{ collection.imageUrl }}</td>
            </tr>
            {% if collection.getCustomAttributes.getValues %}
                {% for attribute in collection.getCustomAttributes.getValues %}
                    <tr>
                        <th>Attribute#{{ attribute.id }}</th>
                        <td>{{ attribute.name }}</td>
                    </tr>
                {% endfor %}
            {% endif %}
        </tbody>
    </table>

    <a href="{{ path('app_collection_index', {'user': user.id}) }}">back to list</a>

    <a href="{{ path('app_collection_edit', {'user': user.id,'collection': collection.id}) }}">edit</a>

    {{ include('collection/_delete_form.html.twig') }}

    <h1>{{ collection.name }}</h1>
    {% if collection.imageUrl %}
        <img src="{{ collection.imageUrl }}" alt="{{ collection.name }} Image">
    {% endif %}
    <p>{{ collection.description }}</p>
{% endblock %}
