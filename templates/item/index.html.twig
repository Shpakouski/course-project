{% extends 'base.html.twig' %}

{% block title %}Items{% endblock %}

{% block body %}
    <h1>Items</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.id }}</td>
                    <td>{{ item.name }}</td>
                    <td>
                        <a href="{{ path('app_item_show', {'user': user.id, 'collection': collection.id,'item': item.id}) }}">show</a>
                        <a href="{{ path('app_item_edit', {'user': user.id, 'collection': collection.id,'item': item.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_item_new',{'user': user.id, 'collection': collection.id}) }}">Create new</a>
{% endblock %}
