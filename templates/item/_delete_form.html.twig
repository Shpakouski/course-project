<form method="post" action="{{ path('app_item_delete', {'user': user.id, 'collection': collection.id,'item': item.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ item.id) }}">
    <button class="btn">Delete</button>
</form>
